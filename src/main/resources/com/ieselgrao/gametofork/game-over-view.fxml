<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ieselgrao.gametofork.controller.GameOverController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="¡GAME OVER!" style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: darkred;" />
    <Label fx:id="finalScoreLabel" text="Puntuación Final: 0" style="-fx-font-size: 24px;" />

    <Button text="JUGAR DE NUEVO" onAction="#handlePlayAgain" style="-fx-font-size: 18px;" />
    <Button text="SALIR" onAction="#handleExit" style="-fx-font-size: 14px;" />
</VBox>